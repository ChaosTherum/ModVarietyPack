    <label>tobacco</label>
    <initialSeverity>2</initialSeverity> 
    <stages>
        <li>
          <minSeverity>0</minSeverity>
          <label>comfortably numb</label>
          <painFactor>0.9</painFactor>
            <capMods>
              <li>
                <capacity>Manipulation</capacity>
                <offset>0.1</offset>
              </li>
              <li>
                <capacity>Moving</capacity>
                <offset>0.1</offset>
              </li>
            </capMods>
        </li>
        <li>
