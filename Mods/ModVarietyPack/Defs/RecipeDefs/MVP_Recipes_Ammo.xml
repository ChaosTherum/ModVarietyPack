    <description>Craft 100 6x24mm energy cartridges.</description>
    <jobString>Making 6x24mm energy cartridges.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>SteelBar</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
      <li>
        <filter>
          <thingDefs>
            <li>Components</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>SteelBar</li>
        <li>Components</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <Ammo_6x24mm_Energy>100</Ammo_6x24mm_Energy>
    </products>
  </RecipeDef>

</RecipeDefs>