<?xml version="1.0" encoding="utf-8" ?>
<ThingDefs>

  <!-- MVP smelt products changed to bars -->

  <ThingDef Name="BasePawn" Abstract="True">
    <thingClass>Pawn</thingClass>
    <category>Pawn</category>
    <selectable>true</selectable>
    <tickerType>Normal</tickerType>
    <altitudeLayer>Pawn</altitudeLayer>
    <useHitPoints>false</useHitPoints>
    <hasTooltip>true</hasTooltip>
    <soundImpactDefault>BulletImpactFlesh</soundImpactDefault>
    <inspectorTabs>
      <li>ITab_Pawn_Health</li>
      <li>ITab_Pawn_Needs</li>
      <li>ITab_Pawn_Character</li>
      <li>ITab_Pawn_Training</li>
      <li>ITab_Pawn_Gear</li>
      <li>ITab_Pawn_Guest</li>
      <li>ITab_Pawn_Prisoner</li>
    </inspectorTabs>
    <comps>
      <li>
        <compClass>CompAttachBase</compClass>
      </li>
    </comps>
    <drawGUIOverlay>true</drawGUIOverlay>
  </ThingDef>



  <ThingDef ParentName="BasePawn" Name="BaseMech" Abstract="True">
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <statBases>
      <Flammability>1</Flammability>
      <ComfyTemperatureMin>-250</ComfyTemperatureMin>
      <ComfyTemperatureMax>100</ComfyTemperatureMax>
    </statBases>
    <race>
      <mechanoid>true</mechanoid>
      <needsRest>false</needsRest>
      <hasGenders>false</hasGenders>
      <isFlesh>false</isFlesh>
      <diet>NeverEats</diet>
    </race>
  </ThingDef>

  <!-- MVP reduced Armor from .7 / .8 -->
  <ThingDef ParentName="BaseMech">
    <defName>Race_Federator</defName>
    <label>federator</label>
    <description>The M2A4 "Federator" Main Battle Mechsuit is a mechsuit model produced by Arms Dynamics. Developed as a heavy assault mechsuit, the Federator's design has been compared to a main battle tank.</description>
    <statBases>
      <MoveSpeed>1.5</MoveSpeed>
      <ArmorRating_Blunt>0.5</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.5</ArmorRating_Sharp>
      <MeatAmount>30</MeatAmount>
    </statBases>
    <verbs>
      <li>
        <verbClass>Verb_MeleeAttack</verbClass>
        <defaultCooldownTicks>120</defaultCooldownTicks>
        <meleeDamageBaseAmount>20</meleeDamageBaseAmount>
        <meleeDamageDef>Blunt</meleeDamageDef>
        <linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
      </li>
      <li>
        <verbClass>Verb_MeleeAttack</verbClass>
        <defaultCooldownTicks>120</defaultCooldownTicks>
        <meleeDamageBaseAmount>20</meleeDamageBaseAmount>
        <meleeDamageDef>Blunt</meleeDamageDef>
        <linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
      </li>
    </verbs>
    <race>
      <intelligence>ToolUser</intelligence>
      <mechanoid>true</mechanoid>
      <thinkTree>Mechanoid</thinkTree>
      <body>MechBody</body>
      <baseBodySize>4</baseBodySize>
      <baseHealthScale>1.5</baseHealthScale>
      <lifeStageAges>
        <li>
          <def>MechanoidFullyFormed</def>
          <minAge>0</minAge>
                <soundWounded>Pawn_Mech_Wounded</soundWounded>
                <soundDeath>Pawn_Mech_Death</soundDeath>
                <soundCall>Pawn_Mech_Call</soundCall>
                <soundAngry>Pawn_Mech_Angry</soundAngry>
        </li>
      </lifeStageAges>
      <soundCallIntervalRange>
        <min>1000</min>
        <max>2000</max>
      </soundCallIntervalRange>
      <soundMeleeHitPawn>Pawn_MechHitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_MechHitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_MechMiss</soundMeleeMiss>
    </race>
    <butcherProducts>
      <SteelBar>80</SteelBar>
      <PlasteelBar>50</PlasteelBar>
    </butcherProducts>
    <recipes>
      <li>ShutDownMechanoid</li>
    </recipes>
  </ThingDef>

